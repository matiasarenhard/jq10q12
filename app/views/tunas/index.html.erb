<p id="notice"><%= notice %></p>

<h1>Tunas</h1>

<table>
  <thead>
    <tr>
      <th>Origin</th>
      <th>Fish</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tunas.each do |tuna| %>
      <tr>
        <td><%= tuna.origin %></td>
        <td><%= tuna.Fish %></td>
        <td><%= link_to 'Show', tuna %></td>
        <td><%= link_to 'Edit', edit_tuna_path(tuna) %></td>
        <td><%= link_to 'Destroy', tuna, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tuna', new_tuna_path %>
